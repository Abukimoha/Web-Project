<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - UrLMS</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fontawesome-all.css" rel="stylesheet" />
    <link href="~/Content/lmscustom.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body style="padding:unset">
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-info">
            <span class="icon">
                <i class="fas fa-book-open"></i>
            </span>
            @Html.ActionLink("LibraryMs", "Index", "tblBooks", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item btn-sm btn-info">
                        <i class="fas fa-home"></i>
                        @Html.ActionLink("Home", "AdminHome", "AdminTransaction", new { area = "" }, new { @class = "btn btn-primary btn-lg btn-block" })
                    </li>
                    <li class="nav-item btn-sm btn-info">
                        <i class="fas fa-address-card"></i>
                        @Html.ActionLink("About", "AdminAbout", "AdminTransaction", new { area = "" }, new { @class = "btn btn-primary btn-lg btn-block" })
                    </li>
                    <li class="nav-item btn-sm btn-info">
                        <i class="fas fa-id-badge"></i>
                        @Html.ActionLink("Contact", "AdminContact", "AdminTransaction", new { area = "" }, new { @class = "btn btn-primary btn-lg btn-block" })
                    </li>
                </ul>
                <ul class="navbar-nav justify-content-end" style="padding-right:50px">
                    <li class="" style="padding-left:5px; padding-right:5px">
                        @Html.ActionLink("Books", "Index", "Booktbl", new { area = "" }, new { @class = "btn btn-primary btn-lg btn-block" })
                    </li>
                    <li class="" style="padding-left:5px; padding-right:5px">

                        @Html.ActionLink("Users", "Index", "Usertbl", null, new { @class = "btn btn-primary btn-lg btn-block" })
                    </li>
                    <li class="" style="padding-left: 5px; padding-right: 5px">
                        @Html.ActionLink("Request", "Requests", "AdminTransaction", null, new { @class = "btn btn-primary btn-lg btn-block" })
                    </li>
                    <li class="" style="padding-left:5px; padding-right:5px">
                        @Html.ActionLink("Accepted", "Accepted", "AdminTransaction", null, new { @class = "btn btn-primary btn-lg btn-block" })
                    </li>
                    <li class="" style="padding-left:5px; padding-right:10px">
                        @Html.ActionLink("Return", "Return", "AdminTransaction", null, new { @class = "btn btn-primary btn-lg btn-block" })
                    </li>
                </ul>
                <span class="text-light" style="padding-top:1px; padding-right:15px">Welcome back Admin!!</span>
                <ul class="navbar-nav justify-content-end">
                    <li class="nav-item btn btn-sm btn-danger">
                        <i class="fas fa-sign-out-alt"></i>
                        @Html.ActionLink("Logout", "Logout", "Admin", null, new { @class = "nav-link", onclick = "return alert('Logged out successfully');", style = "display:inline" })
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <div style="padding-left:20px; padding-right:20px">
        @RenderBody()
    </div>
    <div>

        <footer>
            <div style="" class="card text-center text-white bg-info">
                <div class="card-header">
                    Thank you for your work
                </div>
               
                <p>&copy; @DateTime.Now.Year - LibraryMs</p>
            </div>
        </footer>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>